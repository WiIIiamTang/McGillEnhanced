{
  "name": "McGill Enhanced",
  "manifest_version": 2,
  "version": "2.1.5",
  "description": "Enhance the functionality of McGill.ca",
  "permissions" : [
    "declarativeContent"
  ],
  "background": {
    "scripts": ["js/background.js", "js/backgroundHTTP.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "icons/mcgill-19.png",
      "38": "icons/mcgill-38.png"
    },
    "default_title": "McGill Enhanced is improving this page."
  },
  "icons": {
    "16": "icons/mcgill-16.png",
    "48": "icons/mcgill-48.png",
    "128": "icons/mcgill-128.png"
  },
  "content_scripts" : [
    {
      "matches" : ["*://www.mcgill.ca/study/*", "*://www.ratemyprofessors.com/search*", "*://www.docuum.com/McGill*", "*://vsb.mcgill.ca/vsb*"],
      "js" : ["lib/jquery-1.11.2.js", "lib/tooltipsy.min.js", "js/yearMenu.js", "js/courseLinks.js"]
    }
  ]
}
