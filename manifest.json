{
  "name": "McGill Enhanced",
  "manifest_version": 2,
  "version": "2.2.10",
  "description": "Enhance the functionality of McGill.ca",
  "permissions" : [
    "declarativeContent"
  ],
  "background": {
    "scripts": ["js/backgroundHTTP.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/mcgill-19.png",
      "38": "icons/mcgill-38.png"
    },
    "default_popup": "popup/quicklinksMenu.html"
  },
  "icons": {
    "16": "icons/mcgill-16.png",
    "48": "icons/mcgill-48.png",
    "128": "icons/mcgill-128.png"
  },
  "content_scripts" : [
    {
      "matches" : ["*://www.mcgill.ca/study/*", "*://horizon.mcgill.ca/*", "*://www.ratemyprofessors.com/search*", "*://www.docuum.com/McGill*", "*://vsb.mcgill.ca/*"],
      "js" : ["lib/levenshtein.js", "js/urlData.js", "lib/jquery-1.11.2.min.js", "lib/tooltipsy.min.js", "js/yearMenu.js", "js/courseLinks.js", "js/vsbEnhanced.js"]
    }
  ]
}


