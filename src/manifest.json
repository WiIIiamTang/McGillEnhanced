{
  "name": "McGill Enhanced",
  "author": "kozirisdev",
  "manifest_version": 2,
  "version": "3.3.0",
  "description": "Enhance the functionality of McGill.ca",
  "permissions" : [
    "storage",
    "webRequest", 
    "declarativeContent",
    "*://www.mcgill.ca/study/*", 
    "*://horizon.mcgill.ca/*", 
    "*://www.docuum.com/McGill*", 
    "*://vsb.mcgill.ca/*",
    "*://mymdcm.medicine.mcgill.ca/*"
  ],
  "background": {
    "scripts": [ "js/backgroundHTTP.js", "js/background.js" ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "38": "icons/mymdcm5-256.png",
      "128": "icons/mymdcm5-256.png"
    },
    "default_popup": "menu/quicklinksMenu.html",
    "default_title": "Click to view Quick Links Menu!"
  },
  "icons": {
    "128": "icons/mymdcm5-256.png"
  },
  "content_scripts" : [
    {
      "matches" : [
        "*://www.mcgill.ca/study/*", 
        "*://horizon.mcgill.ca/*", 
        "*://www.docuum.com/McGill*", 
        "*://vsb.mcgill.ca/*"
      ],
      "js" : [
        "lib/jquery-1.11.2.min.js", 
        "lib/tooltipsy.min.js", 
        "lib/levenshtein.js", 
        "js/dataDocuum.js",
        "js/dataProf.js",
        "js/dataRecordings.js",
        "js/dataClassAverages.js",
        "js/addSidebar.js", 
        "js/addYearMenu.js",
        "js/addAveCrowdsource.js", 
        "js/addProfLinks.js", 
        "js/addCourseLinks.js",
        "js/vsbEnhanced.js",
        "js/scheduleDownloadInserter.js",
        "js/init.js"
      ]
    },
    {
      "all_frames": true,
      "matches" : [
        "*://www.mcgill.ca/study/*", 
        "*://horizon.mcgill.ca/*", 
        "*://www.docuum.com/McGill*", 
        "*://vsb.mcgill.ca/*"
      ],
      "js" : [
          "js/insertCSS.js"
      ],
      "run_at": "document_start"
    },
    {
      "run_at": "document_start",
      "matches": [
        "*://mymdcm.medicine.mcgill.ca/*"
      ],
      "js": [
        "lib/jquery-1.11.2.min.js", 
        "lib/icsLib.js", 
        "js/mymdcmEnhanced.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "lib/icsLib.js", 
    "js/scheduleDownload.js",
    "css/sidebar.css",
    "css/yearMenu.css",
    "css/aveCrowdsource.css",
    "css/profLinks.css",
    "css/vsb.css",
    "css/minerva.css",
    "icons/empty-15.png"
  ]
}



